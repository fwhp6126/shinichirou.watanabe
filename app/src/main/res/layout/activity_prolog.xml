<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hjgolf.shinichiro.hajimetegolf.prologActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="　メニューに戻る　"

        android:id="@+id/button7"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_orange_light"
        android:onClick="activity_main" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/wani"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="はじめに"
        android:id="@+id/textView6"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView7"
        android:text="はじめまして。レッスン担当のワニです。これからゴルフ場にデビューしようとしている方や、これからゴルフを始めるジュニアには最適な無料アプリです。１週間で結構ですので実践練習を試して下さい。         この「はじめてゴルフ」は、基本的に「構え」「バックスウィング」「フィニッシュ」の３つをチェックします。ボールを捉える瞬間は、「ダウンブロー」と「レベルブロー」の２つをチェックします。         以上のチェックポイントを常にイメージし、スムーズにコースデビューできますように頑張って練習して下さい。         "
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

</RelativeLayout>
