<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hjgolf.shinichiro.hajimetegolf.step2Activity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:layout_marginTop="33dp"
        android:src="@drawable/wani"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="７日間練習メニュー"
        android:id="@+id/textView18"
        android:layout_below="@+id/imageView12"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="セカンドステップ"
        android:id="@+id/textView19"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="３日目"
        android:id="@+id/button16"
        android:background="@android:color/holo_green_light"
        android:textSize="@dimen/abc_dialog_padding_top_material"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="４日目"
        android:id="@+id/button17"
        android:background="@android:color/holo_green_light"
        android:textSize="@dimen/abc_dialog_padding_top_material"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/button16"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="　ファイナルステップに進む　"
        android:id="@+id/button18"
        android:background="@android:color/holo_green_light"
        android:layout_below="@+id/button17"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />
</RelativeLayout>
