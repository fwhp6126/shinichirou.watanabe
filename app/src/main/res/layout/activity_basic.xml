<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hjgolf.shinichiro.hajimetegolf.basicActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/wani"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="基本メニュー"
        android:id="@+id/textView5"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="@dimen/abc_dialog_padding_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="　グリップの握り方　"
        android:id="@+id/button6"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:background="@android:color/holo_green_light"
        android:textSize="@dimen/abc_dialog_padding_top_material"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="grip1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="　構え方（アドレス）　"
        android:id="@+id/button8"
        android:layout_marginTop="43dp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:background="@android:color/holo_green_light"
        android:textSize="@dimen/abc_dialog_padding_top_material"
        android:layout_below="@+id/button6"
        android:layout_centerHorizontal="true"
        android:onClick="adress1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView8"
        android:layout_below="@+id/button6"
        android:text="方向性に影響しますので、練習前にしっかりチェックして下さい"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="安定したショットのベースになります。練習前にしっかりチェックして下さい"
        android:id="@+id/textView9"
        android:layout_below="@+id/button8"
        android:layout_alignParentStart="true"
        android:textColor="@color/abc_primary_text_disable_only_material_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="　７日間練習メニューに戻る　"
        android:id="@+id/button9"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_light"
        android:onClick="daysmen"
        android:nestedScrollingEnabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="メインメニュー"
        android:id="@+id/button10"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
